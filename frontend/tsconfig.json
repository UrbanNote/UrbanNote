{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "paths": {
      "$animations": ["src/animations"],
      "$animations/*": ["src/animations/*"],
      "$assets": ["src/assets"],
      "$assets/*": ["src/assets/*"],
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$helpers": ["src/helpers"],
      "$helpers/*": ["src/helpers/*"],
      "$hooks": ["src/hooks"],
      "$hooks/*": ["src/hooks/*"],
      "$firebase": ["src/firebase"],
      "$firebase/*": ["src/firebase/*"],
      "$locales": ["src/locales"],
      "$locales/*": ["src/locales/*"],
      "$pages": ["src/pages"],
      "$pages/*": ["src/pages/*"],
      "$router": ["src/router"],
      "$router/*": ["src/router/*"],
      "$store": ["src/store"],
      "$store/*": ["src/store/*"],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
